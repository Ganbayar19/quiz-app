generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id        String     @id @default(uuid())
  userId    String
  title     String
  content   String
  summary   String
  questions Question[]
  createdAt DateTime   @default(now())
}

model Question {
  id       String   @id @default(uuid())
  quizId   String
  question String
  answers  String[]
  correct  String
  quiz     Quiz     @relation(fields: [quizId], references: [id])
}
